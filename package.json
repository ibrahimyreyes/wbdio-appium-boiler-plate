{
  "name": "jasmine-boilerplate",
  "version": "1.0.0",
  "author": "Christian Bromann <christian@saucelabs.com>",
  "description": "Boilerplate project to run WebdriverIO tests with Jasmine",
  "license": "MIT",
  "homepage": "https://github.com/webdriverio/jasmine-boilerplate#readme",
  "type": "module",
  "keywords": [
    "webdriver",
    "webdriverio",
    "jasmine",
    "e2e",
    "selenium",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webdriverio/jasmine-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/webdriverio/jasmine-boilerplate/issues"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "npm run typecheck && npm run lint && npm run test:local",
    "typecheck": "tsc --noEmit",
    "test:local": "wdio run wdio.local.conf.ts",
    "test:gui": "GUI=true wdio run wdio.local.conf.ts",
    "test:headless": "GUI=false wdio run wdio.local.conf.ts",
    "test:sauce": "wdio run wdio.sauce.conf.ts",
    "report:generate": "allure generate allure-results --clean -o allure-report",
    "report:open": "allure open allure-report",
    "report:serve": "allure serve allure-results"
  },
  "devDependencies": {
    "@types/jasmine": "^5.1.9",
    "@wdio/allure-reporter": "^9.22.0",
    "@wdio/cli": "9.21.1",
    "@wdio/eslint": "^0.1.1",
    "@wdio/globals": "9.17.0",
    "@wdio/jasmine-framework": "9.21.0",
    "@wdio/local-runner": "9.21.0",
    "@wdio/sauce-service": "9.21.0",
    "@wdio/spec-reporter": "9.20.0",
    "allure-commandline": "^2.36.0",
    "eslint": "^9.29.0",
    "typescript": "^5.8.3",
    "wdio-video-reporter": "^6.2.0",
    "webdriverio": "9.21.0"
  }
}
